{
    "productName": "Mouseless",
    "version": "0.1.0",
    "identifier": "com.mouseless.app",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:5173",
        "frontendDist": "./dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Mouseless",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "visible": false,
                "url": "index.html"
            }
        ],
        "security": {
            "csp": null
        },
        "macOSPrivateApi": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "category": "Utility",
        "copyright": "",
        "shortDescription": "Keyboard-driven mouse control for macOS",
        "longDescription": "A Rust-based application that enables users to control mouse operations entirely through keyboard inputs, reducing wrist strain and improving productivity.",
        "macOS": {
            "frameworks": [],
            "minimumSystemVersion": "10.15",
            "exceptionDomain": "",
            "signingIdentity": null,
            "providerShortName": null,
            "entitlements": null
        }
    },
    "plugins": {}
}